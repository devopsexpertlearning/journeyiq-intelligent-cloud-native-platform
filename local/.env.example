# ====================
# Database Configuration
# ====================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/journeyiq
POSTGRES_DB=journeyiq

# ====================
# LLM Provider Configuration
# ====================
# Choose one: gemini, gpt4 (Azure OpenAI), groq
LLM_PROVIDER=gemini

# Gemini Configuration (for local development)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-3-flash-preview

# Azure OpenAI Configuration (for production)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2023-05-15

# Groq Configuration (alternative)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL_NAME=llama3-70b-8192

# ====================
# Pub/Sub Configuration
# ====================
# For local development (emulator)
# Changed to service name 'pubsub-emulator' for container communication
PUBSUB_EMULATOR_HOST=pubsub-emulator:8085
GCP_PROJECT_ID=journeyiq-local

# For production (real GCP Pub/Sub)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ====================
# Service URLs (for inter-service communication)
# ====================
# Using Docker service names for internal communication
API_GATEWAY_URL=http://api-gateway:8000
AUTH_SERVICE_URL=http://auth-service:8000
USER_SERVICE_URL=http://user-service:8000
SEARCH_SERVICE_URL=http://search-service:8000
PRICING_SERVICE_URL=http://pricing-service:8000
INVENTORY_SERVICE_URL=http://inventory-service:8000
BOOKING_SERVICE_URL=http://booking-service:8000
PAYMENT_SERVICE_URL=http://payment-service:8000
TICKETING_SERVICE_URL=http://ticketing-service:8000
NOTIFICATION_SERVICE_URL=http://notification-service:8000
REVIEW_SERVICE_URL=http://review-service:8000
ANALYTICS_SERVICE_URL=http://analytics-service:8000
AI_AGENT_SERVICE_URL=http://ai-agent-service:8000
RAG_INGESTION_SERVICE_URL=http://rag-ingestion-service:8000
VECTOR_STORE_SERVICE_URL=http://vector-store-service:8000

# ====================
# Authentication & Security
# ====================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ====================
# Email Configuration (Postfix for local)
# ====================
SMTP_HOST=postfix
SMTP_PORT=25
SMTP_FROM_EMAIL=noreply@journeyiq.com

#for email
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password

# ====================
# Logging
# ====================
LOG_LEVEL=INFO

# ====================
# Observability
# ====================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ====================
# Feature Flags
# ====================
ENABLE_AI_AGENT=true
ENABLE_CANARY_DEPLOYMENT=false

# ====================
# Vector Store Configuration
# ====================
FAISS_INDEX_PATH=./vectorstore/faiss_index
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
