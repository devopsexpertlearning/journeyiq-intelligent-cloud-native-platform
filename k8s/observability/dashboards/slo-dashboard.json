{
    "title": "SLO Report - API Availability",
    "panels": [
        {
            "title": "7-Day Error Budget Remaining",
            "type": "gauge",
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "1 - (sum(increase(http_requests_total{status=~'5..'}[7d])) / sum(increase(http_requests_total[7d]))) / 0.001",
                    "legendFormat": "Budget Remaining"
                }
            ],
            "max": 1,
            "min": 0,
            "thresholds": {
                "steps": [
                    {
                        "color": "red",
                        "value": 0
                    },
                    {
                        "color": "yellow",
                        "value": 0.2
                    },
                    {
                        "color": "green",
                        "value": 0.5
                    }
                ]
            },
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 0
            }
        },
        {
            "title": "Availability (Last 24h)",
            "type": "stat",
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "1 - (sum(increase(http_requests_total{status=~'5..'}[24h])) / sum(increase(http_requests_total[24h])))",
                    "legendFormat": "Availability %",
                    "format": "percentunit"
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 0
            }
        }
    ],
    "schemaVersion": 21,
    "style": "dark",
    "tags": [
        "slo",
        "journeyiq"
    ],
    "timezone": "browser",
    "uid": "slo-report"
}